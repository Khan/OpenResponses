{
  "name": "khan-open-responses",
  "version": "0.0.1",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "deploy": "node_modules/.bin/now",
    "precommit": "lint-staged",
    "prepackage-functions": "rimraf dist-functions",
    "package-functions": "babel 'functions' --out-dir 'dist-functions' --presets=stage-3 --copy-files --ignore 'node_modules'",
    "postpackage-functions": "cd dist-functions && yarn",
    "deploy-functions": "yarn run package-functions && firebase deploy --only functions"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --trailing-comma all",
      "git add"
    ]
  },
  "dependencies": {
    "@types/aphrodite": "^0.5.5",
    "@types/firebase": "^2.4.31",
    "@types/markdown-it": "0.0.2",
    "@types/react-portal": "^3.0.1",
    "@types/validator": "^6.2.0",
    "aphrodite": "^1.2.0",
    "firebase": "^3.7.6",
    "keypather": "^2.0.1",
    "markdown-it": "^8.3.1",
    "markdown-it-katex": "^2.0.3",
    "next": "^2.0.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-measure": "^1.4.7",
    "react-numeric-input": "^2.0.7",
    "react-pointable": "^0.1.0",
    "react-portal": "^3.0.0",
    "react-radio-group": "^3.0.1",
    "react-visibility-sensor": "^3.9.0",
    "slate": "^0.19.16",
    "validator": "^7.2.0"
  },
  "devDependencies": {
    "@types/rimraf": "0.0.28",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-define": "^1.2.0",
    "babel-preset-stage-3": "^6.24.1",
    "flow-bin": "^0.43.1",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "now": "^4.10.3",
    "prettier": "prettier/prettier",
    "react-no-ssr": "^1.1.0",
    "rimraf": "^2.6.1"
  },
  "now": {
    "dotenv": "env.production"
  }
}
